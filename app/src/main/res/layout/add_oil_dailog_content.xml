<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/add_oil_dialog_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/add_oil_dialog_margin"
        android:paddingRight="@dimen/add_oil_dialog_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:text="提交信息"/>

        <TextView
            android:id="@+id/time_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交信息"
            android:layout_marginTop="@dimen/add_oil_dialog_margin"/>
        <TextView
            android:id="@+id/status_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交信息"/>
        <TextView
            android:id="@+id/location_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/longitude_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/latitude_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/oil1_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/add_oil_dialog_item_margin"/>
        <TextView
            android:id="@+id/oil2_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/oil3_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/black_33"-->
            <!--android:layout_marginTop="@dimen/add_oil_dialog_margin"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/add_oil_dialog_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/alpha30"
            android:textColor="@color/white"
            android:text="@string/cancel_label"
            android:gravity="center"
            android:padding="@dimen/add_oil_dialog_item_margin"/>
        <View
            android:visibility="gone"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black_33"/>

        <TextView
            android:id="@+id/sure_tv"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:layout_weight="1.0"
            android:text="@string/sure_label"
            android:gravity="center"
            android:padding="@dimen/add_oil_dialog_item_margin"/>
    </LinearLayout>

</LinearLayout>