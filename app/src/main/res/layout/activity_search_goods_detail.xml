<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/activity_settings_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/empty_rl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/empty_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_empty"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/warn_tv"
                android:text="@string/no_data_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/empty_iv"/>
        </RelativeLayout>
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/content_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:visibility="visible">
            <LinearLayout
                android:layout_marginLeft="@dimen/oil_report_history_list_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loadPort_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/ship_name_label"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/main_text_size"/>
                <TextView
                    android:id="@+id/voyageNo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="航次号"
                    android:textColor="@color/main_title_text_color"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/main_text_size"/>

                <TextView
                    android:id="@+id/portTransportOrder_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="航次顺序"
                    android:textColor="@color/main_title_text_color"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/main_text_size"/>
                <TextView
                    android:id="@+id/estimatedSailingTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/estimatedSailingTime_label"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/main_text_size"/>
                <TextView
                    android:id="@+id/estimatedStopTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/estimatedStopTime_label"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/main_text_size"/>
                <TextView
                    android:id="@+id/actualSailingTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/actualSailingTime_label"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/main_text_size"/>
                <TextView
                    android:id="@+id/actualStopTime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/actualStopTime_label"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/main_text_size"/>

                <TextView
                    android:id="@+id/fStatus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/fStatus_label"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/main_text_size"/>
            </LinearLayout>

        </android.support.design.widget.CoordinatorLayout>
    </FrameLayout>
    <!--more-->
    <LinearLayout
        android:id="@+id/popup_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginRight="10dp"
        android:elevation="20dp"
        android:visibility="gone"
        android:translationZ="20dp"
        android:background="@color/white"
        android:layout_gravity="end|top">
        <include layout="@layout/more_popup_menu"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
