<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/activity_settings_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:id="@+id/empty_rl"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/empty_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_empty"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/warn_tv"
                android:text="@string/no_data_warn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/empty_iv"/>
        </RelativeLayout>
        <!--待报-->
        <ScrollView
            android:id="@+id/content_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2"
            android:scrollbars="none"
            android:layout_marginBottom="0dp"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/portName_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/portName_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="123123"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/jobTypeValue_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/jobTypeValue_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="123123"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/voyageStatusDesc_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/voyageStatusDesc_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:inputType="numberDecimal"
                                android:maxLength="11"
                                android:padding="8dip"
                                android:drawablePadding="@dimen/drawable_padding_size"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/reason_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <EditText
                                android:id="@+id/reason_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:hint="@string/reason_hint"
                                android:drawablePadding="@dimen/drawable_padding_size"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/estimatedTime_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/estimatedTime_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:drawableRight="@mipmap/more_icon"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/occurTime_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/occurTime_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:drawableRight="@mipmap/more_icon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/reportTime_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/reportTime_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:drawableRight="@mipmap/more_icon"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/location_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/location_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:drawableRight="@mipmap/icon_location"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/longitude_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/longitude_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/latitude_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <TextView
                                android:id="@+id/latitude_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/speed_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <EditText
                                android:id="@+id/speed_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:inputType="numberDecimal"
                                android:hint="@string/speed_hint"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/weather_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <EditText
                                android:id="@+id/weather_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:hint="@string/weather_hint"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/feedback_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <EditText
                                android:id="@+id/feedback_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:hint="@string/feedback_hint"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1.0"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dip"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:padding="8dip"
                                android:text="@string/remark_label"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/main_text_size"/>

                            <EditText
                                android:id="@+id/remark_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:gravity="right"
                                android:padding="8dip"
                                android:hint="@string/remark_hint"
                                android:textColor="@color/black"
                                android:textSize="@dimen/main_text_size"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/command_tv"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="删除驳船"
                        android:textColor="@color/black_33"
                        android:background="@color/white"
                        android:textSize="14sp" />

                </LinearLayout>
                <Button
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:id="@+id/commit_bt"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_commit_label"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_login_button_on"/>
            </LinearLayout>
        </ScrollView>
        <!--已报-->
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/content_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </android.support.v4.widget.SwipeRefreshLayout>
        </android.support.design.widget.CoordinatorLayout>
    </FrameLayout>
    <!--more-->
    <LinearLayout
        android:id="@+id/popup_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginRight="10dp"
        android:elevation="20dp"
        android:visibility="gone"
        android:translationZ="20dp"
        android:background="@color/white"
        android:layout_gravity="end|top">
        <include layout="@layout/more_popup_menu"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
