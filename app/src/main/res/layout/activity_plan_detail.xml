<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/activity_settings_title"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/port_ll"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/portName1_tv"
                    android:layout_width="@dimen/port_name_text_width"
                    android:layout_height="@dimen/port_name_text_width"
                    android:text="上海洋山"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dynamic_circle_bg"/>
                <TextView
                    android:id="@+id/line1_tv"
                    android:layout_width="@dimen/port_name_line_width"
                    android:layout_height="@dimen/port_name_line_height"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/port_name_line_margin"
                    android:layout_marginRight="@dimen/port_name_line_margin"/>
                <TextView
                    android:id="@+id/portName2_tv"
                    android:layout_width="@dimen/port_name_text_width"
                    android:layout_height="@dimen/port_name_text_width"
                    android:text="宁波北仑"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dynamic_circle_bg"/>
                <TextView
                    android:id="@+id/line2_tv"
                    android:layout_width="@dimen/port_name_line_width"
                    android:layout_height="@dimen/port_name_line_height"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/port_name_line_margin"
                    android:layout_marginRight="@dimen/port_name_line_margin"/>
                <TextView
                    android:id="@+id/portName3_tv"
                    android:layout_width="@dimen/port_name_text_width"
                    android:layout_height="@dimen/port_name_text_width"
                    android:text="深圳盐田"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dynamic_circle_bg"/>
                <TextView
                    android:id="@+id/line3_tv"
                    android:layout_width="@dimen/port_name_line_width"
                    android:layout_height="@dimen/port_name_line_height"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/port_name_line_margin"
                    android:layout_marginRight="@dimen/port_name_line_margin"/>
                <TextView
                    android:id="@+id/portName4_tv"
                    android:layout_width="@dimen/port_name_text_width"
                    android:layout_height="@dimen/port_name_text_width"
                    android:text="深圳大铲湾"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/dynamic_circle_bg"/>
            </LinearLayout>
            <com.bin.david.form.core.SmartTable
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:id="@+id/commit_bt"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_ship_plan_label"
                android:textColor="@color/white"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_login_button_off"/>
        </LinearLayout>



    </android.support.design.widget.CoordinatorLayout>

    <!--more-->
    <LinearLayout
        android:id="@+id/popup_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginRight="10dp"
        android:elevation="20dp"
        android:visibility="gone"
        android:translationZ="20dp"
        android:background="@color/white"
        android:layout_gravity="end|top">
        <include layout="@layout/more_popup_menu"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
