<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <include layout="@layout/activity_settings_title"/>

    <!--more-->
    <LinearLayout
        android:id="@+id/popup_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginRight="10dp"
        android:elevation="20dp"
        android:visibility="gone"
        android:translationZ="20dp"
        android:background="@color/white"
        android:layout_gravity="end|top">
        <include layout="@layout/more_popup_menu"/>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:visibility="visible"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:id="@+id/content_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/table_margin_top">

                <LinearLayout
                    android:id="@+id/port_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/portName1_tv"
                        android:layout_width="@dimen/port_name_text_width"
                        android:layout_height="@dimen/port_name_text_width"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dynamic_circle_bg"
                        android:gravity="center"
                        android:text="上海洋山"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/line1_tv"
                        android:layout_width="@dimen/port_name_line_width"
                        android:layout_height="@dimen/port_name_line_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/port_name_line_margin"
                        android:layout_marginRight="@dimen/port_name_line_margin"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/portName2_tv"
                        android:layout_width="@dimen/port_name_text_width"
                        android:layout_height="@dimen/port_name_text_width"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dynamic_circle_bg"
                        android:gravity="center"
                        android:text="宁波北仑"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/line2_tv"
                        android:layout_width="@dimen/port_name_line_width"
                        android:layout_height="@dimen/port_name_line_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/port_name_line_margin"
                        android:layout_marginRight="@dimen/port_name_line_margin"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/portName3_tv"
                        android:layout_width="@dimen/port_name_text_width"
                        android:layout_height="@dimen/port_name_text_width"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dynamic_circle_bg"
                        android:gravity="center"
                        android:text="深圳盐田"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/line3_tv"
                        android:layout_width="@dimen/port_name_line_width"
                        android:layout_height="@dimen/port_name_line_height"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/port_name_line_margin"
                        android:layout_marginRight="@dimen/port_name_line_margin"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/portName4_tv"
                        android:layout_width="@dimen/port_name_text_width"
                        android:layout_height="@dimen/port_name_text_width"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dynamic_circle_bg"
                        android:gravity="center"
                        android:text="深圳大铲湾"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sec1_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/linear_table_margin_top"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/port1_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <TextView
                        android:id="@+id/jobTypeValue1_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/table1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/table_margin_top"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sec2_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/linear_table_margin_top">

                    <TextView
                        android:id="@+id/port2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <TextView
                        android:id="@+id/jobTypeValue2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/table2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/table_margin_top"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sec3_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/linear_table_margin_top">

                    <TextView
                        android:id="@+id/port3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <TextView
                        android:id="@+id/jobTypeValue3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/table3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/table_margin_top"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sec4_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/linear_table_margin_top">

                    <TextView
                        android:id="@+id/port4_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <TextView
                        android:id="@+id/jobTypeValue4_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/table_text_size"
                        android:textColor="@color/table_text_color"/>

                    <com.bin.david.form.core.SmartTable
                        android:id="@+id/table4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/table_margin_top"/>
                </LinearLayout>
                <Button
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:id="@+id/commit_bt"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_commit_label"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_login_button_off"/>
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</android.support.design.widget.CoordinatorLayout>
